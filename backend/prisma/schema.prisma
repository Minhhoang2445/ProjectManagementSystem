generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  designation String
  department  String
  avatar      String?
  role        String   @default("staff")         // <--- thêm
  status      String   @default("pending")       // <--- thêm
  createdAt   DateTime @default(now())

  refreshTokens RefreshToken[] 

}
model RefreshToken {
  id            Int      @id @default(autoincrement())
  userId        Int
  token         String   @unique
  createdAt     DateTime @default(now())
  expiresAt     DateTime
  user      User     @relation(fields: [userId], references: [id])
}
